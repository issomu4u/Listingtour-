    <div class="gmain_heading">
        <div class="row">
            <div class="col-md-12">
                <h1>Welcome to @Model.PropertyAddress</h1>
            </div>
        </div>
    </div>
    <!---header----end-->
    <!--contact--sec--->
    <div id="c_id">
        <div class="contactsec-wrapper">
            <div class="container">
                <div class="cont-area">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="client-pic">
                                <img src="@Model.User.PhotoPath" alt="" class="img-thumbnail img-responsive">
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="client-info">
                                <h1>@Model.User.Name @Model.User.Lastname<small>@Model.User.Designation</small></h1>

                                @TempData["Fullurl"]

                                <h2><i class="fas fa-phone-volume"></i>@Model.User.CellNo</h2>
                                <p id="kjkj"><i class="fas fa-envelope"></i>@Model.User.Email</p>
                                <p><i class="fas fa-globe-europe"></i>@Model.User.Website</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="client-logo">
                                <img src="@Model.User.CompanyLogo" alt=""  class="img-thumbnail img-responsive" >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--contact--sec---end-->
    <!--gvideo---->


  @if (Model.YoutubeLink != "" && Model.YoutubeLink != null)
  {
        <div id="g_id">
            <div class="gvideo-wrapper">
                <div class="container">
                    <div class="gvideo">
                        <div class="gh">
                            <h1>Video Tour</h1>
                        </div>


                        <iframe width="100%" height="515" src="@Model.YoutubeLink" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    }

    <!--gvideo---->
    <!----slider---------->
    <div id="slider_id">
        <div class="my-slider-wrapper">
            <!-- Page Content-->
            <main class="page-content">
                <div class="sections">
                    <div id="photos">
                        <div class="container" id="GoToGallery" style="margin:0; padding:0; width: 100%; overflow: hidden">
                            <!---slider----->
                            <div style="text-align: center">
                                <div id="content-vwt" class="section" style="margin: 0 auto">
                                    <div class="gHolder"></div>
                                    <div class="gHolderTop"></div>
                                    <div class="gHolderBottom"></div>
                                    <div class="gControlls"></div>
                                    <div id="bannerscollection_zoominout_opportune">
                                        <div class="myloader"></div>
                                        @if (Model.Images != null)
                                        {
                                            <ul class="bannerscollection_zoominout_list">
                                                @foreach (var item in Model.Images)
                                                {
                                                    <li data-initialZoom="1.28" data-finalZoom="1" data-horizontalPosition="center" data-verticalPosition="center" data-bottom-thumb="@item.PhotoPath" data-zoomEasing="ease-out" data-text-id="" data-duration="5.2" data-autoPlay="5.4"><img src="@item.PhotoPath" alt="" style="width: 1920px; height: 1282px" /></li>
                                                }

                                            </ul>
                                        }


                                    </div>
                                    <script>
                                        var vwt_content = '';

                                        vwt_loaded = false;

                                        function startVwt() {
                                            if (typeof(GoToGallery) != 'undefined')
                                                var Margin = 0;
                                            else
                                                var Margin = 50;
                                            if (!vwt_loaded) {
                                                var vwt_h = $(window).height() - Margin;
                                                $('#GoToGallery').css({
                                                    'height': vwt_h + 230 + 'px'
                                                });
                                                $('#content-vwt').css({
                                                    'height': vwt_h + 'px',
                                                    'min-height': vwt_h + 'px',
                                                    'width': $(window).height() * 1.5 - Margin + 'px'
                                                });

                                                //$('#bannerscollection_zoominout_opportune img').css({width:$(window).width(), height:vwt_h});
                                                $('#bannerscollection_zoominout_opportune img').each(function(i, val) {
                                                    var w = $(val).prop('width');
                                                    $(val).css({
                                                        width: $(window).height() * 1.5 - Margin,
                                                        height: vwt_h
                                                    });


                                                });
                                                $('#bannerscollection_zoominout_opportune').bannerscollection_zoominout({
                                                    skin: 'generous',
                                                    autoPlay: 0,
                                                    responsive: true,
                                                    width: $(window).height() * 1.5 - Margin,
                                                    height: vwt_h,
                                                    fadeSlides: true,
                                                    showCircleTimer: true,
                                                    showNavArrows: true,
                                                    showBottomNav: true,
                                                    enableTouchScreen: true,
                                                    thumbsWrapperMarginTop: 25,
                                                    pauseOnMouseOver: true
                                                });
                                                vwt_loaded = true;

                                            }
                                        };

                                    </script>

                                </div>
                            </div>
                            <!---slider----->
                        </div>
                    </div>
                </div>



                <!----slider---------->
                <!-----property info----->

                <div class="pro_info_wrapper">
                    <div class="container">
                        <div class="pi_h">
                            <h1>Property information</h1>
                            <table style="width:100%; border:1px solid #000;">
                                <tr>
                                    <td colspan="3" style="color: #d72523; font-size: 20px; font-weight: bold;"><b>Price</b> <span>@Html.DisplayFor(modelItem => Model.Price)</span></td>
                                </tr>

                                <tr>
                                    <td><b>MLS:</b> <span>@Html.DisplayFor(modelItem => Model.MLS)</span></td>
                                    <td><b>Status:</b> <span>@Html.DisplayFor(modelItem => Model.Status)</span></td>
                                    <td><b>Type:</b> <span>@Html.DisplayFor(modelItem => Model.Propertytype)</span></td>
                                </tr>
                                <tr>
                                    <td><b>Beds:</b> <span>@Html.DisplayFor(modelItem => Model.Bedrooms)</span></td>
                                    <td><b>Baths:</b> <span>@Html.DisplayFor(modelItem => Model.Washrooms)</span></td>
                                    <td><b>Area:</b> <span>@Html.DisplayFor(modelItem => Model.Area)</span></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <!--map---->
                <div id="m_id">
                    <div class="g-map-wrapper">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="g-map">
                                        <h1>Walkscore</h1>
                                        <iframe src="https://www.google.com/maps/embed?pb=!1m23!1m12!1m3!1d59757.796710265626!2d78.92786057091189!3d20.593680476236017!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m8!3e6!4m5!1s0x30635ff06b92b791%3A0xd78c4fa1854213a6!2sIndia!3m2!1d20.593684!2d78.96288!4m0!5e0!3m2!1sen!2sin!4v1556697324792!5m2!1sen!2sin" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--map--end-->
                <!--gallery---->


                <div id="gallery_id">
                    <div class="gallery-wrapper">
                        <div class="container">
                            <div class="gallery_bar">
                                <div class="container">
                                    <div class="row">
                                        <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="g-h">
                                                <h1>Gallery</h1>
                                            </div>
                                        </div>



                                        @foreach (var item in Model.Images)
                                        {
                                            <div class="gallery_product col-lg-6 col-md-6 col-sm-6 col-xs-12 filter hdpe">
                                                <a href="@item.PhotoPath" data-lightbox="gallery_product"> <img src="@item.PhotoPath" class="img-responsive thumbnail img_gl"></a>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-----footer------>
                <div class="gfooterwrapper">
                    <div class="container">
                        <div class="gfooter">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>© 2019 MyListingTour</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-----footer------>

</body>


<body>
    <div class="gheader_wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="gnav">
                        <nav class="navbar navbar-inverse f_nav">
                            <div class="container">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                    <div class="logo-j">
                                        <a class="navbar-brand" href="gellery2.html">
                                            <img src="img/logo1.jpg" alt="">
                                        </a>
                                    </div>

                                </div>
                                <div class="collapse navbar-collapse" id="myNavbar">
                                    <ul class="nav navbar-nav navbar-right">
                                        <li><a href="#c_id" class="js-scroll-trigger">Contact</a></li>
                                        <li><a href="#g_id" class="js-scroll-trigger">Video</a></li>
                                        <li><a href="#slider_id" class="js-scroll-trigger">Slideshow</a></li>
                                        <li><a href="#m_id" class="js-scroll-trigger">Local Amenities</a></li>
